<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/feedListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_light2"
            android:divider="@null"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <FrameLayout
        android:id="@+id/tutorial_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_alpha"
        android:visibility="gone"
        tools:visibility="visible">

        <com.daasuu.bl.BubbleLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="32dp"
            android:layout_marginTop="80dp"
            android:padding="16dp"
            app:bl_arrowDirection="left"
            app:bl_arrowHeight="8dp"
            app:bl_arrowPosition="16dp"
            app:bl_arrowWidth="16dp"
            app:bl_bubbleColor="@color/primary"
            app:bl_cornersRadius="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:text="@string/tutorial_long_click"
                android:textColor="@android:color/white"/>

        </com.daasuu.bl.BubbleLayout>
    </FrameLayout>

</RelativeLayout>