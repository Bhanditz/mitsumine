<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/AppTheme">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/FeedFragmentTextViewTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:scrollHorizontally="true"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="bold"
                    tools:text="エントリータイトル"/>

                <ImageView
                    android:id="@+id/FeedFragmentImageViewShare"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/button_share"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/FeedFragmentImageViewBookmarkCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="2dp"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/text_large"
                            android:textStyle="bold"
                            tools:text="9999"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="8dp"
                            android:text="@string/users_lower_case"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/FeedFragmentImageViewFavicon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:paddingRight="4dp"
                            tools:src="@drawable/ic_launcher"/>

                        <TextView
                            android:id="@+id/FeedFragmentTextViewDomain"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:lines="1"
                            android:singleLine="true"
                            android:textColor="@color/text"
                            android:textSize="@dimen/text_medium"
                            android:textStyle="bold"
                            tools:text="google.com"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/FeedFragmentTextViewTags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/gray_light4"
                        android:textSize="@dimen/text_small2"
                        tools:text="android, Scala"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/FeedFragmentImageViewThumbnail"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:scaleType="fitStart"
                            android:src="@color/gray_light"/>

                        <TextView
                            android:id="@+id/FeedFragmentTextViewContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="4"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_small"
                            tools:text="コンテンツコンテンツコンテンツコンテンツコンテンツコンテンツコンテンツコンテンツコンテンツ"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>